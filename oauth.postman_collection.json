		{
			"name": "Application Authentication",
			"item": [
				{
					"name": "Access Token Request",
					"event": [
						{
							"listen": "test",
							"script": {
								"id": "2e26a1a5-a934-4eac-a336-e81a256782fe",
								"exec": [
									"const jsonData = pm.response.json();",
									"",
									"pm.environment.set(\"access-token\", jsonData.access_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "{{client-secret}}",
									"type": "string"
								},
								{
									"key": "username",
									"value": "{{client-id}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"name": "Content-Type",
								"value": "application/x-www-form-urlencoded",
								"type": "text"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "client_credentials",
									"type": "text"
								},
								{
									"key": "scope",
									"value": "wow.profile",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{auth-uri}}/oauth/token",
							"host": [
								"{{auth-uri}}"
							],
							"path": [
								"oauth",
								"token"
							]
						}
					},
					"response": []
				}
			]
		},
